FROM kernsuite/base:3
RUN apt-get update && docker-apt-install -y \
    python-pip \
    curl
RUN curl -sL https://deb.nodesource.com/setup_8.x | bash -
RUN docker-apt-install -y \
    nodejs \
    python-casacore
ADD . /src
WORKDIR /src
RUN pip install --upgrade pip
RUN pip install .
RUN python -c "import ragavi.ragavi"